@page "/login"
@layout LoginLayout




<MudText Typo="Typo.h4" GutterBottom="true">Sign In</MudText>

<MudForm Model="Item" >
            <MudTextField Label="E-mail"
                          @bind-Value="Item.Email"
                          Variant="Variant.Outlined"
                          Class="my-4"></MudTextField>
            <MudTextField Label="Password"
                          @bind-Value="Item.Password"
                          InputType="InputType.Password"
                          Variant="Variant.Outlined"
                          Class="my-4"></MudTextField>
    @if (loading)
    {
        <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
    }
    @if (ShowAlert)
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Dense="true" Class="my-2">@AlertMessage</MudAlert>
    }
    <MudButton Variant="Variant.Filled"
               Color="Color.Primary"
               OnClick="LoginAsync"
               Size="Size.Large"
               FullWidth="true">
        Sign In
    </MudButton>

</MudForm>
