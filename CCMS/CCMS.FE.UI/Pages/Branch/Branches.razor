@page "/Branches"
@using CCMS.Common.Dto
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize]
<MudContainer>
    <MudGrid Justify="Justify.FlexEnd" Class="mb-4 pa-4">
        <MudTextField @bind-Value="searchString1"
                      Placeholder="Search"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"
                      Variant="Variant.Filled"
                      Class="mr-4 ">
        </MudTextField>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="NavigateToAddBranch">
        </MudButton>

    </MudGrid>
    <MudTable Filter="new Func<BranchDto,bool>(FilterFunc1)" Items="@Elements" Hover="true" Dense="true" Breakpoint="Breakpoint.Sm" Striped="true" Bordered="true" CustomHeader="true" Loading="@Loading" LoadingProgressColor="Color.Info" Class="mb-10">
        <HeaderContent>
            <MudTHeadRow Style="background-color:#1E88E5">
                <MudTh><b>Restaurant</b></MudTh>
                <MudTh><b>Branch</b></MudTh>
                <MudTh></MudTh>
            </MudTHeadRow>

        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Restaurant">@GetHighlightedText(context.Restaurant)</MudTd>
            <MudTd DataLabel="Branches">@GetHighlightedText(context.Address)</MudTd>
            <MudTd DataLabel="">
                <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                         AriaLabel="Actions">

@*                     <MudMenuItem ><MudIcon Icon="@Icons.Material.Filled.Edit" Color="Color.Secondary"></MudIcon> Edit</MudMenuItem>
 *@
                    <MudMenuItem OnClick="(() => NavigationToMenuItem(context))"><MudIcon Icon="@Icons.Material.Filled.ListAlt" Color="Color.Surface"></MudIcon>Menu Items</MudMenuItem>
                    <MudMenuItem OnClick="(() => NavigationToClient(context))"><MudIcon Icon="@Icons.Material.Filled.SupervisedUserCircle" Color="Color.Tertiary"></MudIcon>Clients</MudMenuItem>
                    <MudMenuItem OnClick="(() => NavigationToOrder(context))"><MudIcon Icon="@Icons.Material.Filled.AddIcCall" Color="Color.Secondary"></MudIcon>Orders</MudMenuItem>
                    <MudMenuItem OnClick="(() => OnDelete(context))"><MudIcon Icon="@Icons.Material.Filled.Delete" Color="Color.Error"></MudIcon>Delete</MudMenuItem>

                </MudMenu>
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudContainer>


