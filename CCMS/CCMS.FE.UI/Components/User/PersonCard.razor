<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Image="@UserPicture" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            @if (User != null)
            {
                <MudText Typo="Typo.body2">@User.Name</MudText>
            }
            else
            {
                <MudText Typo="Typo.body2">No user information available</MudText>
            }
@*             <MudText Typo="Typo.caption">@User.Name</MudText>
 *@        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

